<%- include('../partials/head.ejs'); %>
<%- include('../partials/navbar.ejs'); %> 

<div class="showcase-container" data-stellar-background-ratio="0.5" style="background-image: url('/images/one-piece-bg.jpeg')">

  <div class="container">
		<div class="row align-items-center">
			<div class="col-lg">
				<!-- Main Content -->
				<div class="row">
					<div class="col-lg intro">
						<h1 class="text-white font-weight-bold mb-4" data-aos="fade-up" data-aos-delay="0"><%= title %></h1>
					</div>
				</div>

        <!-- Series Name -->
        <% for(var i=0; i < series.length; i++) { %>
        <div class="row">
					<div class="col-lg">
						<h1 class="text-dark font-weight-bold text-center mb-4" data-aos="fade-up" data-aos-delay="0"><%= series[i].seriesTitle %></h1>
					</div>
				</div>

				<div class="row justify-content-center" data-aos="fade-up"> 
					<!--Item start  -->
					<% for(var j=0; j <  series[i].products.length; j++) { %>
					<div class="col-5 col-md-4 col-lg-3">
						<div class="card mb-4">
							<a href="<%=  series[i].products[j].imageUrl %>" class="gal-item" data-fancybox="gal-<%= i %>"  data-caption="<%=  series[i].products[j].size %>">
								<img src="<%=  series[i].products[j].imageUrl %>" alt="Image" class="card-img-top">
							</a>
							<div class="card-body">
								<h5 class="card-title text-center"><%=  series[i].products[j].name %></h5>
								<p class="card-text  text-center"><%=  series[i].products[j].size %></p>
							</div>
						</div>
					</div>
					<% } %>
					<!--Item End  -->
				</div>

        <% } %>
				<!-- Main Content -->
			</div>
		</div>
	</div>
</div>

<%- include('../partials/footer.ejs'); %>
